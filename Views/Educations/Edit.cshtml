@model CeeveeSoftWebProj.Models.Education

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Education</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.PortfolioId">

            <div class="form-group">
                <label asp-for="ClassOfDegree" class="control-label"></label>
                <input @Html.DropDownList("ClassOfDegree", new SelectList(Enum.GetValues(typeof(ClassOfDegree))), "Select Degree", new { @class = "form-control" }) />
                <span asp-validation-for="ClassOfDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <input asp-for="Course" class="form-control" type="date" />
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="School" class="control-label"></label>
                <input asp-for="School" class="form-control" type="date" />
                <span asp-validation-for="School" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
